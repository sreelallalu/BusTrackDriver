<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
           android:layout_marginLeft="80dp"
            android:text="TRIPNO"
            android:id="@+id/tripnol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <TextView
       android:gravity="center_horizontal"
       android:layout_weight="50"
       android:layout_marginTop="10dp"

       android:text="Source"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/sourceplace"
            android:layout_weight="50"
            android:layout_marginTop="10dp"

            android:text="Source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center_horizontal"
            android:layout_weight="5"
            android:layout_marginTop="10dp"


            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="5"
            android:layout_marginTop="10dp"
android:id="@+id/sourcetime"
            android:text="Sourcetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center_horizontal"
            android:layout_weight="50"
            android:layout_marginTop="10dp"

            android:text="Destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="50"
            android:layout_marginTop="10dp"
android:id="@+id/destiplace"
            android:text="Destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center_horizontal"
                android:layout_weight="5"
                android:layout_marginTop="10dp"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" />

            <TextView
                android:layout_weight="5"
                android:layout_marginTop="10dp"
                android:id="@+id/desttime"
                android:text="destinationtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button

                android:text="Start Juerney"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/statrtjr"
                android:gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:text="Stop >>"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ListView
            android:layout_marginTop="10dp"
            android:id="@+id/liststops"
            android:layout_width="match_parent"
            android:layout_height="400dp">

        </ListView>



    </LinearLayout>
</LinearLayout>